<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_background"
    android:backgroundTint="@color/white"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/facility_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility Details:"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Facility Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facility Name:"
            android:textSize="20sp"
            android:minWidth="160dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/facility_details_text_facility_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_background_darker_gray"
            android:paddingHorizontal="10dp"
            android:text="Your facility's name here"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textSize="20sp"
            android:minWidth="160dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/facility_details_text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_background_darker_gray"
            android:paddingHorizontal="10dp"
            android:text="Address of your facility"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Phone Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textSize="20sp"
            android:minWidth="160dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/facility_details_text_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_background_darker_gray"
            android:paddingHorizontal="10dp"
            android:text="Phone Number (Optional)"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Email Address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address:"
            android:textSize="20sp"
            android:minWidth="160dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/facility_details_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_background_darker_gray"
            android:paddingHorizontal="10dp"
            android:text="Email address"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Person Capacity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Capacity:"
            android:textSize="20sp"
            android:minWidth="160dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/facility_details_text_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_background_darker_gray"
            android:paddingHorizontal="10dp"
            android:text="Max number of people allowed"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/return_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Return"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark" />
    </LinearLayout>
</LinearLayout>
