<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_background"
    android:backgroundTint="@color/gray1"
    android:padding="8dp">

    <!-- Placeholder for Image Thumbnail -->
    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- Placeholder for Image Description or Title -->
    <TextView
        android:id="@+id/image_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Image Description"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


    <!-- THIS IS A PLACEHOLDER FOR THE IMAGE GALLERY. IMAGE GALLERY WILL NOT BE A LIST -->
