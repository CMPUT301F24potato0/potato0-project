<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/rounded_corner_background"
    android:backgroundTint="@color/violet_transparent">

    <TextView
        android:id="@+id/envent_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event_Title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:visibility="visible"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/message_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textSize="15sp"
        android:textColor="@color/white" />



    <TextView
        android:id="@+id/flag_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flag"
        android:visibility="gone"
        android:textColor="@color/white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="5dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/darkRed"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            android:text="Cancel"
            app:strokeColor="@color/black"
            app:strokeWidth="2.5dp"/>

        <Button
            android:id="@+id/signup_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="5dp"
            android:text="Sign up"
            android:textColor="@color/black"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_notification"
            app:layout_constraintStart_toEndOf="@+id/cancel_id"
            app:strokeColor="@color/black"
            app:strokeWidth="2.5dp" />

        <Button
            android:id="@+id/delete_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkRed"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="5dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="2.5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
